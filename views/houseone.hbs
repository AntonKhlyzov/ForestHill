        // Function to load Google Maps API asynchronously
    function loadGoogleMapsScript() {
        const script = document.createElement('script');
        const apiKey = '{{{ GOOGLEAPI }}}';
        const h1lat = '{{{ h1lat }}}';
        const h1lng = '{{{ h1lng }}}';
        script.src = `https://maps.googleapis.com/maps/api/js?key=${apiKey}&callback=initMap`;
        script.defer = true; // Ensure script is executed after HTML parsing
        document.body.appendChild(script);
        //console.log('API', script.src);
        //console.log('APIkey:',apiKey);
    }

    // Define the initMap function
    function initMap() {
        // Define the center of the map
        const center = { lat: {{h1lat}}, lng: {{h1lng}} };

        // Create a new map instance
        let map = new google.maps.Map(document.getElementById('map'), {
            center: center,
            zoom: 12 // Adjust zoom level as needed
        });

        // Add a circle overlay to represent the general area
        const circle = new google.maps.Circle({
            strokeColor: '#FF0000',
            strokeOpacity: 0.8,
            strokeWeight: 2,
            fillColor: '#FF0000',
            fillOpacity: 0.35,
            map: map,
            center: center,
            radius: 1000 // Radius in meters, adjust as needed
        });

        // You can add markers or customize the map further here
    }

    // Load Google Maps API when the page is fully loaded
    window.onload = function() {
        loadGoogleMapsScript();
    };

